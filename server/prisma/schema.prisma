datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Banner {
  id       String @id @default(cuid())
  title    String
  subtitle String
  imageUrl String
}

model Products {
  id         String     @id @default(cuid())
  name       String
  imageUrl   String
  popularity String
  details    String[]
  newArrival Int
  isFeatured Int
  price      Int
  discount   Int
  stock      Int
  comingSoon Int
  images     String[]
  category   String
}
